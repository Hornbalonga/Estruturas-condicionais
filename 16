#include <stdio.h>

int main() {
int qtl;
float l,a;
  printf("quantos lados possui o poligono:\n");
  scanf("%d", & qtl);

  switch(qtl){
    
    case(3):
    printf("tamanho do  lado");
      scanf("%f",& l);
     a= l*l*1.73/4;
      printf("area do triangulo: %.2f",a);
    break;
    
    case(4):
    printf("tamanho do lado");
    scanf("%f",& l);
    a = l*l;
    printf("area so quadrado %.1f",a);
    break;
    
    case(6):
    printf("tamanho do lado");
    scanf("%f",& l);
    a = 6*l*l*1.73/4;
    printf("area do exagono %.2f",a);
    break;

    default:
    printf("nao sei calcular a area");
    break;
    }
  return 0;
}
